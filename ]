  }

  if (req.body.carne4) {
    req.body.carne4 = "\n" + "   ‚Ä¢ Hamb√∫rguer";
    pedidos.push(req.body.carne4);

    req.session.precoTotal += 2;
  }

  if (req.body.carne5) {
    req.body.carne5 = "\n" + "   ‚Ä¢ Fil√© de frango";
    pedidos.push(req.body.carne5);

    req.session.precoTotal += 3.0;
  }

  if (req.body.carne6) {
    req.body.carne6 = "\n" + "   ‚Ä¢Lingui√ßa Su√≠na";
    pedidos.push(req.body.carne6);
    req.session.precoTotal += 2.5;
  }

  pedidos.push("\n\nüç≥ *COMPLEMENTO:* \n");

  if (req.body.mais1) {
    req.body.mais1 = "\n" + "   ‚Ä¢ Bacon";
    pedidos.push(req.body.mais1);

    req.session.precoTotal += 2.0;
  }

  if (req.body.mais2) {
    req.body.mais2 = "\n" + "   ‚Ä¢ Ovo";
    pedidos.push(req.body.mais2);

    req.session.precoTotal += 1.0;
  }

  if (req.body.mais3) {
    req.body.mais3 = "\n" + "   ‚Ä¢ Cebola Caramelizada";
    pedidos.push(req.body.mais3);

    req.session.precoTotal += 1.0;
  }

  if (req.body.mais4) {
    req.body.mais4 = "\n" + "   ‚Ä¢ Maionese Golds";
    pedidos.push(req.body.mais4);

    req.session.precoTotal += 0.0;
  }

  if (req.body.mais5) {
    req.body.mais5 = "\n" + "   ‚Ä¢ Presunto";
    pedidos.push(req.body.mais5);

    req.session.precoTotal += 1.0;
  }

  if (req.body.mais6) {
    req.body.mais6 = "\n" + "   ‚Ä¢ Calabresa";
    pedidos.push(req.body.mais6);

    req.session.precoTotal += 2;
  }

  if (req.body.mais7) {
    req.body.mais7 = "\n" + "   ‚Ä¢ Batata Palha";
    pedidos.push(req.body.mais7);

    req.session.precoTotal += 1.0;
  }

  pedidos.push("\n\nü•¨ *VERDURA:* \n");

  if (req.body.verdura1) {
    req.body.verdura1 = "\n" + "   ‚Ä¢ Alface";
    pedidos.push(req.body.verdura1);

    req.session.precoTotal += 0.0;
