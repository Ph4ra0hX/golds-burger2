app
  .post("/enviar", function (req, res) {
    if (!req.session.dadosCliente) {
      req.session.dadosCliente = "";
    }

    if (req.body.nome2) {
      req.session.dadosCliente += " *NOME:* \n\n" + "    ‚Ä¢ " + req.body.nome2;
    }

    if (req.body.nome) {
      req.session.dadosCliente += "\n *NOME:* \n\n" + "    ‚Ä¢ " + req.body.nome;
    }

    if (req.body.rua) {
      req.session.dadosCliente += "\n\n *RUA:* \n\n" + "    ‚Ä¢ " + req.body.rua;
    }

    if (req.body.bairro) {
      req.session.dadosCliente +=
        "\n\n *BAIRRO:* \n\n" + "    ‚Ä¢ " + req.body.bairro;
    }

    if (req.body.numero) {
      req.session.dadosCliente +=
        "\n\n *N√öMERO DA CASA:* \n\n" + "    ‚Ä¢ " + req.body.numero;
    }

    if (req.body.referencia) {
      req.session.dadosCliente +=
        "\n\n *PONTO DE REFER√äNCIA:* \n\n" + "    ‚Ä¢ " + req.body.referencia;
    }

    if (req.body.checkbox1) {
      req.session.precoSomado += 2.0;
    }

    req.session.queijoebom += req.session.dadosCliente;
    console.log("3 " + req.session.precoSomado);

    enderecoCompleto =
      "https://api.whatsapp.com/send?1=pt_BR&phone=5588993788451&text=" +
      req.session.queijoebom +
      "\n\n *PRE√áO TOTAL:* \n\n" +
      "    ‚Ä¢ R$:" +
      req.session.precoSomado;

    if (req.body.PIX) {
      enderecoCompleto +=
        "\n\n    ‚Ä¢ PIX (88994634270)" +
        "\n\n *OBSERVA√á√ÉO:* \n\n" +
        "    " +
        req.body.observacao;
    }

    if (req.body.cartao) {
      enderecoCompleto +=
        "\n\n    ‚Ä¢ Cart√£o" +
        "\n\n *OBSERVA√á√ÉO:* \n\n" +
        "    " +
        req.body.observacao;
    }
    if (req.body.Dinheiro) {
      enderecoCompleto +=
        "\n\n    ‚Ä¢ Dinheiro" +
        "\n\n *OBSERVA√á√ÉO:* \n\n" +
        "    " +
        req.body.observacao;
    }

    if (req.body.checkbox1) {
      enderecoCompleto +=
        "\n\n    ‚Ä¢ Taxa de entrega inclusa no valor total. \n\n";
    }

    req.session.numeroDoPedido = 0;

    req.session.dadosCliente = "";

    precoSomado = 0;

    req.session.precoSomado = 0;

    req.session.queijoebom = [];

    numeroDoPedido = 0;

    numeroDoPedidoString = "";

    var finalmente = enderecoCompleto.replace("undefined", "");

    req.session.destroy();

    res.redirect(finalmente);
  })
  .listen(process.env.PORT);
